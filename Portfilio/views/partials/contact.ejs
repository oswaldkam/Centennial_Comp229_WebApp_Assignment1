<script>
  $(document).on("submit", "form.contactForm", submitCallback);

  function submitCallback(e) {
    e.preventDefault();
    alert(
      "Hi " +
        e.target.lastName.value +
        ", we got your message, thanks for contacting!"
    );
    return false;
  }
</script>
<div>
  <div class="row">
    <div class="col-md-12"><h1>Contact</h1></div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <form class="contactForm" onsubmit="submit()" action="/">
        <div class="form-group">
          <div class="form-row">
            <div class="col">
              <label for="email">Email address</label>
              <input
                type="email"
                class="form-control"
                id="email"
                placeholder="foobar@example.com"
                required
              />
            </div>
          </div>
        </div>
        <div class="form-group">
          <div class="form-row">
            <div class="col">
              <label for="email">First Name</label>
              <input
                type="text"
                class="form-control"
                id="firstName"
                placeholder="First name"
                required
              />
            </div>
            <div class="col">
              <label for="email">Last Name</label>
              <input
                type="text"
                class="form-control"
                id="lastName"
                placeholder="Last name"
                required
              />
            </div>
          </div>
        </div>

        <div class="form-group">
          <div class="form-row">
            <div class="col">
              <label for="message">Message</label>
              <textarea
                class="form-control"
                id="message"
                placeholder="Message"
                required
              ></textarea>
            </div>
          </div>
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
