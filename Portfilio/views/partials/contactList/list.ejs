<div class="row">
  <div class="col-md-6">
    <h2><%- title %></h2>
  </div>
</div>
<div class="row justify-content-center">
  <div class="col-md-10">
    <% for (let contact of data.contacts) { %>
    <div class="card mb-3">
      <div class="card-body">
        <div class="row">
          <div class="col-md-4">
            <h5 class="card-title">
              <%= contact.lastName %>, <%= contact.firstName %>
            </h5>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <p class="card-text">Phone</p>
          </div>
          <div class="col-md-6">
            <p class="card-text">Email</p>
          </div>
        </div>
        <div class="row">
          <div class="col-md-2">
            <p class="card-text"><%= contact.phone %></p>
          </div>
          <div class="col-md-6">
            <p class="card-text"><%= contact.email %></p>
          </div>
          <div class="col-md-1">
            <a
              href="/contactList/edit/<%= contact._id %>"
              class="btn btn-primary"
              >Update</a
            >
          </div>
          <div class="col-md-1">
            <form
              method="POST"
              action="/contactList/<%= contact._id %>?_method=DELETE"
            >
              <button class="btn btn-danger">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>
